<div class="tab-pane" id="signup-pane" role="tabpanel" aria-labelledby="signup-tab">
    <div class="form-container">
        <h2 class="form-title">Criar conta</h2>
        <p class="form-subtitle">Crie uma conta para continuar.</p>

        <form id="signup-form" novalidate>
            <div class="mb-3">
                <label for="signup-username" class="form-label">Nome de usuário</label>
                <input type="text" class="form-control" id="signup-username" placeholder="Digite seu nome de usuário"
                    required aria-describedby="signup-username-feedback">
                <div id="signup-username-feedback" class="invalid-feedback">
                    Por favor, insira seu nome de usuário.
                </div>
            </div>

            <div class="mb-3">
                <label for="signup-email" class="form-label">Email</label>
                <input type="email" class="form-control" id="signup-email" placeholder="Digite seu email" required
                    aria-describedby="signup-email-feedback">
                <div id="signup-email-feedback" class="invalid-feedback">
                    Por favor, insira um email válido.
                </div>
            </div>

            <div class="mb-3">
                <label for="signup-password" class="form-label">Senha</label>
                <input type="password" class="form-control" id="signup-password" placeholder="Digite sua senha" required
                    minlength="6" aria-describedby="signup-password-feedback">
                <div id="signup-password-feedback" class="invalid-feedback">
                    A senha deve ter pelo menos 6 caracteres.
                </div>
            </div>

            <div class="mb-4">
                <label for="signup-confirm" class="form-label">Confirme a senha</label>
                <input type="password" class="form-control" id="signup-confirm" placeholder="Confirme sua senha"
                    required aria-describedby="signup-confirm-feedback">
                <div id="signup-confirm-feedback" class="invalid-feedback">
                    As senhas não coincidem.
                </div>
            </div>

            <button type="submit" class="btn btn-primary w-100">Criar conta</button>
        </form>
    </div>
</div>